#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_bitcoin
#build/bitcoind::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_bitcoin)

DEB_INSTALL_EXAMPLES_monerotrustd += debian/examples/*
DEB_INSTALL_MANPAGES_monerotrustd += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix monerotrustd
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f monerotrust-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake monerotrust-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_monerotrust
	src/test_monerotrust

# Ensure wrapper is set executable
binary-post-install/monerotrustd:
	chmod +x $(cdbs_curdestdir)usr/bin/monerotrustd
binary-post-install/monerotrust-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/monerotrust-qt
